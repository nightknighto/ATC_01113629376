{
	"name": "backend",
	"version": "1.0.0",
	"main": "dist/index.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only --env-file .env src/index.ts",
		"dev:docker": "ts-node-dev --respawn --transpile-only --env-file /run/secrets/backend_secret src/index.ts",
		"build": "tsc",
		"start": "node --env-file .env dist/index.js",
		"pretest": "set DATABASE_URL=postgresql://postgres:postgres@localhost:5432/events_test&& npx prisma db push --force-reset --skip-generate",
		"test": "jest --runInBand",
		"prisma:generate": "prisma generate",
		"prisma:push": "prisma db push",
		"prisma:studio": "prisma studio"
	},
	"dependencies": {
		"@azure/storage-blob": "^12.27.0",
		"@events-platform/shared": "*",
		"@prisma/client": "^5.3.1",
		"@types/mime-types": "^2.1.4",
		"@types/multer": "^1.4.12",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"jsonwebtoken": "^9.0.2",
		"mime-types": "^3.0.1",
		"multer": "^1.4.5-lts.2",
		"swagger-ui-express": "^5.0.1",
		"zod": "^3.24.4",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.8.0",
		"@types/bcryptjs": "^2.4.4",
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.18",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.3",
		"@types/node": "^20.8.2",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"dotenv": "^16.5.0",
		"jest": "^29.7.0",
		"prisma": "^5.3.1",
		"supertest": "^7.1.1",
		"ts-jest": "^29.3.4",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	}
}
