# Database connection variables
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=events_platform
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database connection string (constructed from above variables)
